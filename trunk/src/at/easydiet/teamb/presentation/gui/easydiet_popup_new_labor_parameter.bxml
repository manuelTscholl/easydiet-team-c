                    <TextInput bxml:id="_value"/>
                    <ListButton bxml:id="_unit" Form.label="Einheit"/>
                </BoxPane>
            </Form.Section>
        </Form>
    </BoxPane>
</newParameter:NewLaborParameterContentBorder>