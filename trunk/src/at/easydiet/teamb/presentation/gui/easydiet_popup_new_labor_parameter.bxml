 xmlns:content="org.apache.pivot.wtk.content"
 xmlns:newParameter="at.easydiet.teamb.presentation.component.sheet"
 xmlns="org.apache.pivot.wtk">
    
    
    <BoxPane preferredWidth="320" orientation="vertical" styles="{verticalAlignment:'center'}">
        <Form>
            <Form.Section>
                <TextInput bxml:id="_definition" Form.label="Name"/>
                <ListButton bxml:id="_checkOperator" Form.label="Vergleichsoperator"/>
