<easyDiet:EasyDietWindow title="Pivot Window" maximized="true"
xmlns:bxml="http://pivot.apache.org/bxml" 
xmlns:easyDiet="at.fhv.teamc.easydiet.view"
xmlns="org.apache.pivot.wtk">

<!-- Main structure -->
    <TablePane styles="{verticalSpacing:1, showHorizontalGridLines:false,
    horizontalSpacing:1, showVerticalGridLines:false, backgroundColor:'#EBEDEF'}"
    xmlns:bxml="http://pivot.apache.org/bxml"
    xmlns="org.apache.pivot.wtk">
        <columns>
            <TablePane.Column bxml:id="mainTableColumn" width="1024"/>
        </columns>

    <!-- Menubar -->
        <TablePane.Row height="-1">
            <bxml:include bxml:id="menuBar" src="menu.bxml"/>
        </TablePane.Row>

    <!-- Content -->
        <TablePane.Row height="-1">

            <!-- Content Table -->
            <TablePane styles="{verticalSpacing:1, showHorizontalGridLines:false,
            horizontalSpacing:10, showVerticalGridLines:false, padding:'{top:5, left:5, right:15}'}"
            xmlns:bxml="http://pivot.apache.org/bxml"
            xmlns="org.apache.pivot.wtk">
                <columns>
                    <TablePane.Column bxml:id="navigationColumn" width="-1"/>
                    <TablePane.Column bxml:id="contentColumn" width="1*"/>
                </columns>

                <TablePane.Row bxml:id="workSpaceRow" height="700">

                    <!-- Navigation, left column -->
                    <bxml:include bxml:id="navigation" src="navigation.bxml"/>

                    <!-- Content, right column -->
                    <bxml:include bxml:id="content" src="content.bxml"/>
                </TablePane.Row>
            </TablePane>
        </TablePane.Row>
    </TablePane>
</easyDiet:EasyDietWindow>